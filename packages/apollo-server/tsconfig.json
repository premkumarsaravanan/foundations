{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "strict": true,
    "lib": ["dom", "es5", "es6"],
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types", "../../node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "public", "dist", "src/**/*.test.ts", "src/**/__mocks__/*.ts", "src/**/__tests__/*.ts"]
}
