{
  "name": "marketplace",
  "version": "1.0.0",
  "description": "Marketplace for PAAS platform",
  "main": "./src/index.ts",
  "repository": "git@github.com:reapit/app-store.git",
  "author": "Will McVay <wmcvay@reapit.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn fetch-config && webpack --color --mode production --config ./src/scripts/webpack-prod.js",
    "start": "node ./public/index.js app-store",
    "stop": "killall -SIGINT app-store",
    "dev": "yarn fetch-config && REAPIT_ENV=LOCAL webpack-dev-server --hot --progress --color --mode development --config ./src/scripts/webpack-dev.js",
    "bundle-analyse": "node ./src/scripts/bundle-phobia.js && yarn build && webpack-bundle-analyzer ./public/dist/stats.json",
    "fetch-config": "yarn config-manager getSecret reapit-marketplace-app-config",
    "lint:src": "tslint --fix --project tsconfig.json --format stylish",
    "lint:cypress": "tslint --fix --project './src/tests/tsconfig.json' --format stylish",
    "lint": "yarn lint:src && yarn lint:cypress",
    "test": "cross-env TZ=UTC jest --coverage --silent",
    "test-dev": "cross-env TZ=UTC jest --watch --verbose",
    "test:ci": "cross-env TZ=UTC jest --ci --reporters=default --reporters=jest-junit",
    "test-e2e:dev": "cypress open --project './src/tests'",
    "test-e2e": "cypress run --project './src/tests'",
    "test-e2e:ci": "yarn dev:ci && yarn test-e2e",
    "dev:ci": "yarn dev & wait-on http://localhost:8080",
    "test-perf": "cross-env TZ=UTC npx jest --config='src/tests/lighthouse/jest.config.js'",
    "test-perf:ci": "concurrently --success=\"first\" \"yarn start\" \"yarn test-perf\" -k"
  },
  "dependencies": {
    "@sentry/browser": "^5.11.1",
    "chart.js": "^2.9.3",
    "dayjs": "^1.8.17",
    "diff": "^4.0.1",
    "gitter-sidecar": "^1.5.0",
    "hardtack": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "react": "^16.11.0",
    "react-chartjs-2": "^2.8.0",
    "react-dom": "^16.11.0",
    "react-icons": "^3.7.0",
    "react-redux": "^7.1.3",
    "react-router": "5.1.2",
    "react-router-dom": "^5.1.2",
    "react-slick": "^0.24.0",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3",
    "swagger-ui-react": "^3.24.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "@cypress/webpack-preprocessor": "^4.1.1",
    "@reapit/foundations-ts-definitions": "^0.0.18",
    "@types/diff": "^4.0.2",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/nanoid": "^2.1.0",
    "@types/react-slick": "^0.23.4",
    "babel-loader": "^8.0.6",
    "bundle-phobia-cli": "~0.13.0",
    "chromedriver": "~2.43.1",
    "concurrently": "~4.1.1",
    "css-loader": "~3.0.0",
    "cypress": "^3.8.0",
    "cypress-file-upload": "^3.5.1",
    "cypress-plugin-retries": "^1.5.2",
    "favicons-webpack-plugin": "^0.0.9",
    "file-loader": "~3.0.1",
    "fork-ts-checker-notifier-webpack-plugin": "~1.0.0",
    "fork-ts-checker-webpack-plugin": "~1.3.4",
    "html-webpack-plugin": "~3.2.0",
    "jest-junit": "~6.4.0",
    "lighthouse": "~5.0.0",
    "lint-staged": "~8.1.7",
    "loader-utils": "^1.2.3",
    "mini-css-extract-plugin": "~0.7.0",
    "mockdate": "^2.0.5",
    "nanoid": "^2.1.8",
    "node-sass": "~4.12.0",
    "prettier": "^1.18.2",
    "purgecss": "^1.3.0",
    "purgecss-whitelister": "^2.4.0",
    "sass-loader": "~7.1.0",
    "source-map-loader": "~0.2.4",
    "style-loader": "~0.23.1",
    "sw2dts": "~2.6.2",
    "ts-node": "~8.3.0",
    "ts-paths-to-webpack-alias": "~0.3.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "~1.18.0",
    "tslint-config-standard": "~8.0.1",
    "tslint-plugin-prettier": "~2.0.1",
    "wait-on": "^3.3.0",
    "webpack-bundle-analyzer": "~3.3.2",
    "webpack-cli": "~3.3.2",
    "webpack-dev-server": "~3.4.1",
    "whatwg-fetch": "^3.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --ci --no-color"
    }
  },
  "lint-staged": {
    "!(**/cypress/**/*.{ts,tsx})/**/src/**/*.{ts,tsx}": [
      "yarn lint:src",
      "git add"
    ],
    "**/cypress/**/*.{ts,tsx}": [
      "yarn lint:cypress",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "jest-junit": {
    "outputDirectory": "./.jest-junit-reports"
  }
}
