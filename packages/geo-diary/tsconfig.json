{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": false,
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "types": ["jest", "node", "react"],
    "typeRoots": ["./src/types/index.d.ts", "./node_modules/@types", "../../node_modules/@types"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@reapit/cognito-auth": ["../../node_modules/@reapit/cognito-auth/src"],
      "@reapit/elements": ["../../node_modules/@reapit/elements/src"]
    },
    "lib": ["dom", "es2015", "es2017", "es2018", "es2019", "es2020", "es5", "es6", "es7", "esnext"]
  },
  "include": ["src"],
  "exclude": ["public", "dist", "./webpack.config.js", "node_modules", "src/tests/coverage"]
}
