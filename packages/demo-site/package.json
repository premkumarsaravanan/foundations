{
  "name": "demo-site",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://demo-site.reapit.com",
  "scripts": {
    "serve": "serve -d public -l 8080",
    "prettify": "prettier -c --write \"*/**\""
  },
  "devDependencies": {
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "serve": "^11.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
