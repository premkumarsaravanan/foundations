{
  "name": "@reapit/cognito-auth",
  "version": "2.0.1",
  "description": "Simple wrapper around AWS Cognito for basic authentication flow",
  "main": "dist/index.js",
  "umd:main": "dist/cognito-auth.umd.production.js",
  "module": "dist/cognito-auth.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --coverage --silent",
    "test-ci": "rm -rf ./public && yarn build && ./node_modules/.bin/concurrently --success=\"first\" \"yarn start-dev\" \"yarn test\" -k",
    "test-dev": "jest --watch --verbose",
    "lint": "tslint --fix --project tsconfig.json --format stylish",
    "prepublish": "yarn test && yarn build",
    "prebuild": "rimraf dist && rimraf public",
    "build-npm": "cross-env NODE_ENV=production tsdx build --format=cjs,esm,umd",
    "build-serverless": "tsc && cp -rf ./src/mailer/templates/ejs ./public/mailer/templates/ejs",
    "build": "yarn build-serverless && yarn build-npm",
    "start-dev": "node ./public/app.dev.js",
    "serverless": "serverless deploy",
    "deploy": "yarn lint && yarn build-serverless && yarn test-ci && yarn serverless",
    "dev": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reapit/cognitio-auth.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/reapit/cognitio-auth/issues"
  },
  "homepage": "https://github.com/reapit/cognitio-auth#readme",
  "dependencies": {
    "@types/jsonwebtoken": "^8.3.5",
    "amazon-cognito-identity-js": "~3.0.13",
    "cors": "^2.8.5",
    "ejs": "^3.0.1",
    "express": "~4.17.1",
    "hardtack": "^4.1.2",
    "isomorphic-fetch": "~2.2.1",
    "jsonwebtoken": "^8.5.1",
    "serverless-http": "~2.0.2"
  },
  "devDependencies": {
    "@types/aws-serverless-express": "~3.3.1",
    "@types/cors": "^2.8.5",
    "@types/ejs": "^2.7.0",
    "@types/express": "~4.17.0",
    "@types/isomorphic-fetch": "~0.0.35",
    "@types/jest": "~24.0.15",
    "@types/yaml": "^1.2.0",
    "concurrently": "^4.1.1",
    "husky": "~3.0.0",
    "jest": "~24.8.0",
    "lint-staged": "~9.2.0",
    "nodemon": "~1.19.1",
    "prettier": "~1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "~24.0.2",
    "ts-node": "~8.3.0",
    "tsdx": "^0.11.0",
    "tslint": "~5.20.1",
    "tslint-config-prettier": "~1.18.0",
    "tslint-config-standard": "~9.0.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.7.2",
    "yaml": "^1.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>[/\\\\](node_modules|src/core)[/\\\\]",
      "<rootDir>/src/app.ts",
      "<rootDir>/src/app.dev.ts",
      "<rootDir>/src/index.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>[/\\\\](node_modules|public|dist)[/\\\\]"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn lint",
      "git add"
    ]
  }
}
