{
  "name": "@reapit/cognito-custom-mail-lambda",
  "version": "1.0.0",
  "description": "Lambda Mailer Function",
  "main": "public/app.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest --coverage --silent",
    "test-dev": "jest --watch --verbose",
    "lint": "tslint --fix --project tsconfig.json --format stylish",
    "prepublish": "yarn test && yarn build",
    "prebuild": "rimraf dist && rimraf public",
    "build": "tsc --p tsconfig.legacy.json && cp -rf ./src/mailer/templates/ejs ./public/mailer/templates/ejs",
    "serverless": "serverless deploy",
    "deploy": "CI=true yarn lint && yarn build && yarn test && yarn serverless"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reapit/cognito-custom-mail-lambda.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/reapit/cognito-custom-mail-lambda/issues"
  },
  "homepage": "https://github.com/reapit/cognito-custom-mail-lambda#readme",
  "dependencies": {
    "aws-lambda": "^0.1.2",
    "ejs": "^3.0.1"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.39",
    "@types/ejs": "^2.7.0",
    "@types/jest": "~24.0.15",
    "husky": "~3.0.0",
    "jest": "~24.8.0",
    "lint-staged": "~9.2.0",
    "prettier": "~1.19.1",
    "rimraf": "^3.0.0",
    "ts-jest": "~24.0.2",
    "tslint": "~5.20.1",
    "tslint-config-prettier": "~1.18.0",
    "tslint-config-standard": "~9.0.0",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.7.2"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>[/\\\\](node_modules|src/core)[/\\\\]",
      "<rootDir>/src/app.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>[/\\\\](node_modules|public|dist)[/\\\\]"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn lint",
      "git add"
    ]
  }
}
