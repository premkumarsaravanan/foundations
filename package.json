{
  "name": "marketplace",
  "version": "1.0.0",
  "description": "Marketplace for PAAS platform",
  "main": "./src/index.ts",
  "repository": "git@github.com:reapit/app-store.git",
  "author": "Will McVay <wmcvay@reapit.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "yarn fetch-definitions && webpack --color --mode production --config ./src/scripts/webpack-prod.js",
    "start": "node ./public/index.js app-store",
    "stop": "killall -SIGINT app-store",
    "dev": "webpack-dev-server --hot --progress --color --mode development --config ./src/scripts/webpack-dev.js",
    "bundle-analyse": "node ./src/scripts/bundle-phobia.js && yarn build && webpack-bundle-analyzer ./public/dist/stats.json",
    "fetch-definitions": "node ./src/scripts/fetch-definitions.js",
    "lint": "tslint --fix --project tsconfig.json --format stylish",
    "test": "jest --coverage --silent",
    "test-dev": "jest --watch --verbose",
    "test:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "test-e2e": "wdio ./src/scripts/wdio.conf.js",
    "test-dev-e2e": "wdio ./src/scripts/wdio.conf.js --watch",
    "test-e2e:ci": "concurrently --success=\"first\" \"yarn start\" \"yarn test-e2e\" -k",
    "test-e2e:bstack": "wdio ./src/scripts/browserstack.conf.js",
    "test-e2e:bstack:ci": "concurrently --success=\"first\" \"yarn start\" \"yarn test-e2e:bstack\" -k",
    "test-perf": "npx jest --config='src/tests/lighthouse/jest.config.js'",
    "test-perf:ci": "concurrently --success=\"first\" \"yarn start\" \"yarn test-perf\" -k"
  },
  "dependencies": {
    "@reapit/elements": "^0.4.92",
    "diff": "^4.0.1",
    "formik": "~1.5.8",
    "hardtack": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-icons": "^3.7.0",
    "react-redux": "^7.1.3",
    "react-router": "5.1.2",
    "react-router-dom": "^5.1.2",
    "react-slick": "^0.24.0",
    "redux": "^4.0.4",
    "redux-saga": "^1.1.3",
    "swagger-ui-react": "^3.23.3"
  },
  "devDependencies": {
    "@redux-saga/testing-utils": "^1.0.5",
    "@types/diff": "^4.0.2",
    "@types/enzyme": "~3.9.3",
    "@types/jasmine": "~3.3.13",
    "@types/jest": "~24.0.13",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/node": "~12.0.2",
    "@types/react": "^16.9.2",
    "@types/react-dom": "^16.9.0",
    "@types/react-redux": "~7.0.9",
    "@types/react-router": "~5.0.3",
    "@types/react-router-dom": "~4.3.5",
    "@types/react-slick": "^0.23.4",
    "@types/webdriverio": "~4.13.3",
    "browserstack-capabilities": "^0.7.0",
    "bundle-phobia-cli": "~0.13.0",
    "chromedriver": "~2.43.1",
    "concurrently": "~4.1.1",
    "css-loader": "~3.0.0",
    "dotenv": "~8.0.0",
    "dotenv-webpack": "~1.7.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "enzyme-to-json": "^3.4.3",
    "favicons-webpack-plugin": "^0.0.9",
    "file-loader": "~3.0.1",
    "fork-ts-checker-notifier-webpack-plugin": "~1.0.0",
    "fork-ts-checker-webpack-plugin": "~1.3.4",
    "html-webpack-plugin": "~3.2.0",
    "husky": "~2.3.0",
    "isomorphic-fetch": "~2.2.1",
    "jest": "^24.9.0",
    "jest-fetch-mock": "~2.1.2",
    "jest-junit": "~6.4.0",
    "lighthouse": "~5.0.0",
    "lint-staged": "~8.1.7",
    "loader-utils": "^1.2.3",
    "mini-css-extract-plugin": "~0.7.0",
    "node-sass": "~4.12.0",
    "prettier": "^1.18.2",
    "purgecss": "^1.3.0",
    "purgecss-whitelister": "^2.4.0",
    "sass-loader": "~7.1.0",
    "source-map-loader": "~0.2.4",
    "style-loader": "~0.23.1",
    "sw2dts": "~2.6.2",
    "ts-jest": "~24.0.2",
    "ts-loader": "~6.0.1",
    "ts-node": "~8.3.0",
    "ts-paths-to-webpack-alias": "~0.3.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "~1.18.0",
    "tslint-config-standard": "~8.0.1",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "3.7.2",
    "wdio-browserstack-reporter": "^0.1.1",
    "wdio-chromedriver-service": "~0.1.3",
    "wdio-jasmine-framework": "~0.3.8",
    "wdio-spec-reporter": "~0.1.5",
    "webdriverio": "~4.14.4",
    "webpack": "~4.32.2",
    "webpack-bundle-analyzer": "~3.3.2",
    "webpack-cli": "~3.3.2",
    "webpack-dev-server": "~3.4.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test --ci --no-color"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "git add"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "jest-junit": {
    "outputDirectory": "./.jest-junit-reports"
  }
}
