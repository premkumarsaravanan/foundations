{
  "name": "cognitio-auth",
  "version": "1.0.0",
  "description": "Simple wrapper around AWS Cognito for basic authentication flow",
  "main": "handler.js",
  "scripts": {
    "test": "jest --coverage --silent",
    "test-ci": "concurrently --success=\"first\" \"yarn start-dev\" \"yarn test\" -k",
    "test-dev": "jest --watch --verbose",
    "lint": "tslint --fix --project tsconfig.json --format stylish",
    "build": "tsc",
    "start-dev": "node ./public/app.dev.js",
    "serverless": "serverless deploy",
    "deploy": "yarn lint && yarn build && yarn test-ci && yarn serverless",
    "dev": "nodemon"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reapit/cognitio-auth.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/reapit/cognitio-auth/issues"
  },
  "homepage": "https://github.com/reapit/cognitio-auth#readme",
  "dependencies": {
    "amazon-cognito-identity-js": "~3.0.13",
    "cors": "^2.8.5",
    "express": "~4.17.1",
    "isomorphic-fetch": "~2.2.1",
    "serverless-http": "~2.0.2"
  },
  "devDependencies": {
    "@types/aws-serverless-express": "~3.3.1",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "~6.1.1",
    "@types/express": "~4.17.0",
    "@types/isomorphic-fetch": "~0.0.35",
    "@types/jest": "~24.0.15",
    "concurrently": "^4.1.1",
    "dotenv": "~8.0.0",
    "husky": "~3.0.0",
    "jest": "~24.8.0",
    "lint-staged": "~9.2.0",
    "nodemon": "~1.19.1",
    "prettier": "~1.18.2",
    "ts-jest": "~24.0.2",
    "ts-node": "~8.3.0",
    "tslint": "~5.18.0",
    "tslint-config-prettier": "~1.18.0",
    "tslint-config-standard": "~8.0.1",
    "tslint-plugin-prettier": "~2.0.1",
    "typescript": "~3.5.3"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "coverageDirectory": "./coverage",
    "coveragePathIgnorePatterns": [
      "<rootDir>[/\\\\](node_modules|src/core)[/\\\\]", "<rootDir>/src/app.ts", "<rootDir>/src/app.dev.ts"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>[/\\\\](node_modules|public)[/\\\\]"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn test-ci"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn lint",
      "git add"
    ]
  }
}
