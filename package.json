{
  "name": "search-widget",
  "version": "0.1.0",
  "private": true,
  "homepage": "https://demo-site.reapit.com",
  "dependencies": {
    "little-loader": "^0.2.0",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-icons": "^3.7.0",
    "react-scripts": "^3.2.0"
  },
  "scripts": {
    "start": "PORT=8080 ./node_modules/.bin/react-app-rewired start",
    "build": "./node_modules/.bin/react-app-rewired build",
    "postbuild": "mv ./build/search-widget.js ./public/scripts && rm -rf ./build && cd public && zip -r search-widget.zip ./scripts && cd ..",
    "serve": "serve -d public -l 8080",
    "test": "./node_modules/.bin/react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "fetch-definitions": "node ./fetch-definitions.js",
    "prettify": "prettier -c --write \"*/**\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@testing-library/react-hooks": "^2.0.3",
    "@types/enzyme": "^3.10.3",
    "@types/googlemaps": "^3.38.0",
    "@types/jest": "^24.0.19",
    "@types/little-loader": "^0.2.0",
    "@types/lodash.merge": "^4.6.6",
    "@types/node": "12.7.12",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@types/styled-components": "^4.1.19",
    "babel-jest": "^24.9.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.15.0",
    "enzyme-to-json": "^3.4.2",
    "husky": "^3.0.9",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.2",
    "lodash.merge": "^4.6.2",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3",
    "serve": "^11.2.0",
    "styled-components": "^4.4.0",
    "sw2dts": "^2.6.2",
    "ts-jest": "^24.1.0",
    "typescript": "3.6.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "CI=true yarn test"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
