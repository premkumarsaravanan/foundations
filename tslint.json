{
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "printWidth": 120,
        "semi": false
      }
    ],
    "no-floating-promises": false,
    "deprecation": false,
    "class-name": false
  },
  "jsRules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "printWidth": 120,
        "semi": false
      }
    ],
    "no-floating-promises": false,
    "deprecation": false,
    "class-name": false
  },
  "extends": ["tslint-config-standard", "tslint-config-prettier"],
  "cliOptions": {
    "exclude": ["node_modules", "public", "src/tests/coverage"]
  }
}
